# DEVELOPMENT ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your development values
# NEVER commit .env.local to version control

# Server Configuration
PORT=3000
NODE_ENV="development"

# JWT Configuration - Generate with: openssl rand -base64 32
JWT_SECRET="GENERATE_NEW_SECRET_HERE"
JWT_EXPIRES_IN="24h"

# GitHub OAuth Configuration (Development App)
GITHUB_CLIENT_ID="your-dev-github-client-id"
GITHUB_CLIENT_SECRET="your-dev-github-client-secret"
CALLBACK_URL="http://localhost:3000/auth/github/callback"

# Google OAuth Configuration (Development App)
GOOGLE_CLIENT_ID="your-dev-google-client-id"
GOOGLE_CLIENT_SECRET="your-dev-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# Database Configuration (Development Database)
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="flownity_dev"
DATABASE_USER="flownity_dev_user"
DATABASE_PASSWORD="GENERATE_NEW_PASSWORD_HERE"

# Token Verification Configuration
TOKEN_CACHE_TIMEOUT=300
TOKEN_REQUEST_TIMEOUT=5000
TOKEN_RETRY_ATTEMPTS=2
TOKEN_MAX_CACHE_SIZE=1000
TOKEN_ENABLE_DETAILED_LOGGING=false